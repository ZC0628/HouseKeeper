<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    	
    <ImageView 
        android:id="@+id/phonetest_listview_icon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/root"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"/>
    
	<TextView 
	    android:id="@+id/phonetest_listview_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@id/phonetest_listview_icon"
	    android:layout_marginLeft="30dp"
	    android:text="设备名称"
	    android:textSize="15sp"
	    android:layout_toRightOf="@id/phonetest_listview_icon"
	    android:layout_centerHorizontal="true"/>    
    
    <TextView 
	    android:id="@+id/phonetest_listview_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@id/phonetest_listview_icon"
	    android:layout_toRightOf="@id/phonetest_listview_icon"
	    android:layout_marginLeft="30dp"
	    android:text="设备名称"
	    android:textSize="15sp"
	    android:layout_centerHorizontal="true"/>    
    
    

</RelativeLayout>
